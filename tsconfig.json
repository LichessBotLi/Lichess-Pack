{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": ".",       // compile TS to same folder as JS
    "rootDir": ".",      // root of the project
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
